{
    "name": "bitsplat",
    "version": "1.0.0",
    "description": "A really crude alternative to bittorrent where file transfer is done by physical devices.",
    "main": "gulpfile.js",
    "scripts": {
        "test": "run-s \"gulp test-dotnet\"",
        "preuser-install": "run-s test",
        "user-install": "run-s publish-linux copy-local",
        "publish-all": "run-s publish-win32 publish-linux publish-osx",
        "release": "run-s test create-release copy-to-release tag-release",
        "tag-release": "node tag-release.js",
        "copy-to-release": "run-p copy-osx-release copy-win32-release copy-linux-release",
        "ensure-release-folder-exists": "mkdirp release/linux-x64 release/osx-x64 release/win-x64",
        "destroy-release-folder": "rimraf release",
        "create-release": "run-s destroy-release-folder ensure-release-folder-exists publish-all",
        "copy-linux-release": "cp src/bitsplat/bin/Release/netcoreapp3.1/linux-x64/publish/bitsplat release/linux-x64",
        "copy-osx-release": "cp src/bitsplat/bin/Release/netcoreapp3.1/osx-x64/publish/bitsplat release/osx-x64",
        "copy-win32-release": "cp src/bitsplat/bin/Release/netcoreapp3.1/win-x64/publish/bitsplat.exe release/win-x64",
        "publish-linux": "dotnet publish src/bitsplat/bitsplat.csproj -c Release -r linux-x64",
        "publish-win32": "dotnet publish src/bitsplat/bitsplat.csproj -c Release -r win-x64",
        "publish-osx": "dotnet publish src/bitsplat/bitsplat.csproj -c Release -r osx-x64",
        "copy-local": "cp src/bitsplat/bin/Release/netcoreapp3.1/linux-x64/publish/bitsplat ~/.local/bin",
        "gulp": "cross-env DOTNET_CORE=1 BUILD_TOOLS_FOLDER=tools gulp"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/fluffynuts/bitsplat.git"
    },
    "keywords": [],
    "author": "",
    "license": "BSD-2-Clause",
    "bugs": {
        "url": "https://github.com/fluffynuts/bitsplat/issues"
    },
    "homepage": "https://github.com/fluffynuts/bitsplat#readme",
    "devDependencies": {
        "ansi-colors": "^4.1.1",
        "chai": "^4.2.0",
        "chalk": "^3.0.0",
        "cross-env": "^6.0.3",
        "debug": "^4.1.1",
        "del": "^5.1.0",
        "event-stream": "^4.0.1",
        "fancy-log": "^1.3.3",
        "gulp": "^4.0.2",
        "gulp-debug": "^4.0.0",
        "gulp-dotnet-cli": "^1.1.0",
        "gulp-edit-xml": "^3.1.1",
        "gulp-filter": "^6.0.0",
        "gulp-help": "^1.6.1",
        "gulp-msbuild": "^0.6.2",
        "gulp-npm-run": "0.0.3",
        "gulp-nunit-runner": "^1.2.3",
        "inquirer": "^7.0.3",
        "jasmine-core": "^3.5.0",
        "karma": "^4.4.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-cli": "^2.0.0",
        "karma-coverage": "^2.0.1",
        "karma-jasmine": "^3.1.0",
        "karma-nested-reporter": "^0.1.7",
        "karma-requirejs": "^1.1.0",
        "karma-xml-reporter": "^0.1.4",
        "mkdirp": "^0.5.1",
        "nodemon": "^2.0.2",
        "npm-run-all": "^4.1.5",
        "plugin-error": "^1.0.1",
        "proxyquire": "^2.1.3",
        "q": "^1.5.1",
        "readline": "^1.3.0",
        "request": "^2.88.0",
        "require-dir": "^1.2.0",
        "requirejs": "^2.3.6",
        "run-sequence": "^2.2.1",
        "simple-git": "^1.129.0",
        "temp": "^0.9.1",
        "through2": "^3.0.1",
        "undertaker-forward-reference": "^1.0.2",
        "which": "^2.0.2",
        "xml2js": "^0.4.23"
    }
}
